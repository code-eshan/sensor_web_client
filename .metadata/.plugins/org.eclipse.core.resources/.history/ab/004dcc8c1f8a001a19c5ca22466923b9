<body>
    <h2>Fire Alarm Sensor Details</h2>
<!--   <p><a href="webapi/myresource">Jersey resource</a>
    <p><a href="webapi/sensors">Get Sensor List</p>
    --> 
    
    <table class="table table-stripped">
    
    <tr>
    <th>Sensor ID</th>
    <th>Status</th>
    <th>Floor Number</th>
    <th>Room Number</th>
    <th>Smoke Level</th>
    <th>CO2 Level</th>
    </tr>
    
    <tbody id="data">
    
    </tbody>
    
    </table>
    
    <script>
    
    fetch("http://localhost:8080/sensorRest/webapi/sensors").then(
    		res=>{
    			res.json().then(
    				data => {
    					console.log(data);
    					if(data.length > 0) {
    						var temp = "";
    						
    						//----- star for loop
    						
    						data.forEach((u) => {
    							
    							temp += "<tr>";
    							temp += "<td>" + u.id + "</td>";
    							if(u.status) {
    								temp += "<td>" + "active" + "</td>";
    							} else {
    								temp += "<td>" + "inactive" + "</td>";
    							}
    							
    							temp += "<td>" + u.floorNum + "</td>";
    							temp += "<td>" + u.roomNum + "</td>";
    							temp += "<td>" + u.sLevel + "</td>";
    							temp += "<td>" + u.cLevel + "</td></tr>";
    						})
    						//----- close for loop
    						
    						document.getElementById("data").innerHTML = temp;
    					}
    				}		
    			)
    		}
    )
    
    </script>
</body>
